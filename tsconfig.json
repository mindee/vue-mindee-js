{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,

    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "cypress/*": ["./cypress/*"]
    }
  },
  "include": ["src", "cypress"],
  "exclude": ["node_modules", "dist", "docs"]
}
